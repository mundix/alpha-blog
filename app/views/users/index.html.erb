<h1 align="center">All Alpha blogers</h1>
<div align="center">
  <% @users.each do |user| %>

      <div class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li>
              <%= link_to gravatar_for(user), user_path(user) %>

            </li>
            <li class="article-title">
              <%= link_to user.username, users_path(user) %>
            </li>
            <li>
              <small><%= pluralize(user.articles.count,"articles") if user.articles %></small>
            </li>
          </div>
        </div>
      </div>

  <% end %>
</div>