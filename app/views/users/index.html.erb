<h1 align="center">All Alpha blogers</h1>
<div align="center">
  <%= will_paginate %>
  <% @users.each do |user| %>

      <div class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li>
              <%= link_to gravatar_for(user), user_path(user) %>

            </li>
            <li class="article-title">
              <%= link_to user.username, user_path(user) %>
            </li>
            <li>
              <small><%= pluralize(user.articles.count,"articles") if user.articles %></small>
            </li>
            <% if logged_user? and current_user.admin? and user != current_user %>
              <li>
                <%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Want to delte this user"}%>
              </li>
            <% end %>
          </div>
        </div>
      </div>

  <% end %>
  <%= will_paginate %>
</div>